{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h"
  },
  "exclude": ["src/components/**/test/*", "**/**.stories.*", "src/stories/**"],
  "include": [
    "src/**/*",
    "stencil-plugin-generate-tag-names.ts"
  ],
}
